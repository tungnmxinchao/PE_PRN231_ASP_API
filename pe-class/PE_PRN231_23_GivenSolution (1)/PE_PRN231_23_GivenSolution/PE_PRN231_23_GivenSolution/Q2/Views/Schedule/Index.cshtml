@{
}
@model List<Q2.DTOs.ScheduleViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Screening Schedule</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        div {
            margin-bottom: 20px;
        }

        input[type="date"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }

        button {
            padding: 8px 15px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-left: 10px;
        }

        button:hover {
            background-color: #2980b9;
        }

        h1 {
            color: #333;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid #3498db;
            text-align: center;
        }

        thead tr {
            background: #3498db;
            color: white;
            font-weight: bold;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
        }

        tbody tr:nth-child(even) {
            background: #f2f2f2;
        }

        tbody tr:hover {
            background: #dcdcdc;
        }
    </style>
</head>
<body>

    <div>
        <form method="get" asp-controller="Schedule" asp-action="Index">
            <input type="date" name="selectedDate" required />
            <button type="submit">Get Schedule</button>
        </form>
    </div>

    <h1>Screening schedule on @ViewBag.selectedDate</h1>

    <table>
        <thead>
            <tr>
                <th>ScheduleId</th>
                <th>Room</th>
                <th>TimeSlot</th>
                <th>Movie</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.RoomTitle</td>
                    <td>@item.TimeSlotName</td>
                    <td>@item.MovieName</td>
                    <td>@item.Note</td>
                </tr>
            }

        </tbody>
    </table>

</body>
</html>
